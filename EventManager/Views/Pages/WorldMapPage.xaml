<Page x:Class="EventManager.Views.Pages.WorldMapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource LightGrayBrush}">
        <!-- Action Bar -->
        <Grid Style="{StaticResource ActionBarStyle}" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="BackButton" Style="{StaticResource HamburgerButton}"
                       Content="&#xE72B;" Click="BackButton_Click"/>
                <TextBlock Text="World Map" FontSize="18" FontWeight="Bold"
                          Foreground="{StaticResource WhiteBrush}" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <StackPanel Margin="0,60,0,0">

            <!-- Filter Section -->
            <StackPanel Margin="20,10">
                <TextBlock Text="Filter by Name:" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="MapFilterTextBox" Style="{StaticResource SearchBox}" Width="350"/>

                <!-- Event List (for drag source) -->
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <StackPanel>
                        <Button Content="🎪 Kustendorf" Style="{StaticResource IconTextButton}" Width="120" Height="40"/>
                        <Button Content="🎵 Coachella" Style="{StaticResource IconTextButton}" Width="120" Height="40"/>
                        <Button Content="🏀 NBA" Style="{StaticResource IconTextButton}" Width="120" Height="40"/>
                    </StackPanel>
                    <StackPanel Margin="10,0">
                        <Button Content="🎬 Exit Festival" Style="{StaticResource IconTextButton}" Width="120" Height="40"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Map Area -->
            <Border Background="{StaticResource WhiteBrush}" 
                   BorderBrush="{StaticResource DarkGrayBrush}" 
                   BorderThickness="2" 
                   Margin="20" 
                   Height="400">

                <Canvas x:Name="MapCanvas" Background="#E8E8E8">
                    <!-- Simple map representation -->
                    <Rectangle Fill="#90EE90" Width="150" Height="100" Canvas.Left="50" Canvas.Top="200"/>
                    <!-- Green area -->
                    <Rectangle Fill="#FFD700" Width="2" Height="150" Canvas.Left="150" Canvas.Top="150"/>
                    <!-- Yellow line -->

                    <!-- Event icons on map -->
                    <Button Content="🎪" FontSize="20" Width="30" Height="30" 
                           Canvas.Left="120" Canvas.Top="180" Background="Transparent" BorderThickness="0"/>
                    <Button Content="⚙️" FontSize="20" Width="30" Height="30" 
                           Canvas.Left="160" Canvas.Top="220" Background="Transparent" BorderThickness="0"/>
                </Canvas>
            </Border>

            <!-- Search Map -->
            <StackPanel Margin="20,0">
                <TextBlock Text="Search Map:" Style="{StaticResource FieldLabel}"/>
                <TextBox Style="{StaticResource SearchBox}" Width="350"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>