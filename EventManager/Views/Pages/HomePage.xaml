<!-- Views/Pages/HomePage.xaml -->
<Page x:Class="EventManager.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource LightGrayBrush}">
        <!-- Action Bar -->
        <Grid Style="{StaticResource ActionBarStyle}" 
              VerticalAlignment="Top" 
              Height="60">

            <StackPanel Orientation="Horizontal" 
                       VerticalAlignment="Center">

                <!-- Hamburger Menu -->
                <Button x:Name="MenuButton" 
                       Style="{StaticResource HamburgerButton}"
                       Content="&#xE700;"
                       Click="MenuButton_Click"/>

                <!-- Title -->
                <TextBlock Text="Event Manager" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="{StaticResource WhiteBrush}"
                          VerticalAlignment="Center"
                          Margin="10,0"/>

            </StackPanel>

            <!-- Status indicators (signal, battery, time) -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,15,0">

                <TextBlock Text="📶" FontSize="14" Margin="5,0"/>
                <TextBlock Text="🔋" FontSize="14" Margin="5,0"/>
                <TextBlock Text="{Binding CurrentTime}" 
                          FontSize="14" 
                          Foreground="{StaticResource WhiteBrush}"
                          Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Margin="0,60,0,0" 
                     VerticalScrollBarVisibility="Auto">

            <StackPanel Style="{StaticResource MobileContainer}">

                <!-- App Title -->
                <TextBlock Text="Event Manager" 
                          Style="{StaticResource PageTitle}"
                          Margin="0,20,0,30"/>

                <!-- Menu Buttons Grid (2x3 layout for better Ana accessibility) -->
                <Grid Margin="0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- View All Events -->
                    <Button Grid.Row="0" Grid.Column="0"
                           Style="{StaticResource IconTextButton}"
                           Click="ViewAllEventsButton_Click"
                           Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="View All Events" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Add New Event -->
                    <Button Grid.Row="0" Grid.Column="1"
                           Style="{StaticResource IconTextButton}"
                           Click="AddNewEventButton_Click"
                           Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="➕" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Add New Event" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- View World Map -->
                    <Button Grid.Row="1" Grid.Column="0"
                           Style="{StaticResource IconTextButton}"
                           Click="ViewWorldMapButton_Click"
                           Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌍" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="View World Map" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Manage Tags -->
                    <Button Grid.Row="1" Grid.Column="1"
                           Style="{StaticResource IconTextButton}"
                           Click="ManageTagsButton_Click"
                           Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏷️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Manage Tags" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Event Types -->
                    <Button Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource IconTextButton}"
                           Click="EventTypesButton_Click"
                           Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Event Types" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Demo Mode - Special highlight for Ana -->
                    <Button Grid.Row="2" Grid.Column="1"
                           Style="{StaticResource PrimaryButton}"
                           Click="DemoModeButton_Click"
                           Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▶️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Demo Mode" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </Grid>

                <!-- Quick Stats Section -->
                <Border Background="{StaticResource WhiteBrush}" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="0,30,0,0"
                       BorderBrush="{StaticResource DarkGrayBrush}"
                       BorderThickness="1">

                    <StackPanel>
                        <TextBlock Text="Quick Stats" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding TotalEvents}" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource PrimaryBlueBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Events" 
                                          FontSize="12" 
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding EventsOnMap}" 
                                          FontSize="24" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource SuccessGreenBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="On Map" 
                                          FontSize="12" 
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Help Text for Ana -->
                <TextBlock Text="💡 Tip: Use Demo Mode to see how the app works!" 
                          FontSize="14" 
                          FontStyle="Italic"
                          Foreground="{StaticResource DarkGrayBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          TextWrapping="Wrap"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
